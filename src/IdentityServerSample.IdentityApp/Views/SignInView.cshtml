@model IdentityServerSample.IdentityApp.ViewModels.SignInViewModel

<form method="post" class="form-sign-in m-auto text-center">
  <h1 class="mb-3"><span>Please sign in</span></h1>
  <div class="form-floating mb-3">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="email" class="form-control" placeholder="" />
    <span asp-validation-for="Email" class="invalid-feedback"></span>
  </div>
  <div class="form-floating mb-3">
    <label asp-for="Password">Password</label>
    <input asp-for="Password" type="password" class="form-control" placeholder="" />
    <span asp-validation-for="Password" class="invalid-feedback"></span>
  </div>
  <div class="form-check mb-3">
    <label>
      <input asp-for="RememberMe" type="checkbox" class="from-check-input" />
      <label asp-for="RememberMe" class="form-check-label">Remember me</label>
    </label>
  </div>
  <button class="btn btn-lg btn-primary w-100" type="submit">
    <span>Sign In</span>
  </button>
</form>
